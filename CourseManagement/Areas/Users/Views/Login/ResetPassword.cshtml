@model CourseManagement.ViewModels.Users.LoginViewModel

@{
    ViewData["Title"] = "Thay đổi mật khẩu";
}
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>@ViewData["Title"]</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<style>
    html, body {
        overflow: hidden;
        height: 100vh;
        margin: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #f8f9fa;
        font-family: 'Arial', sans-serif;
    }

    .forgot-password-container {
        background: #fff;
        padding: 3rem 2.5rem;
        border-radius: 12px;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.1);
        width: 3000%; 
        max-width: 1000px;
        text-align: center;
    }

        .forgot-password-container h2 {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 1.5rem;
        }

        .forgot-password-container p {
            font-size: 14px;
            color: #6c757d;
            margin-bottom: 1.5rem;
        }

        .forgot-password-container .form-group {
            margin-bottom: 1rem;
            text-align: left;
            width: 100%;
        }

            .forgot-password-container .form-group label {
                font-size: 14px;
                font-weight: 500;
                color: #000;
                margin-bottom: 0.5rem;
                display: block;
            }

        .forgot-password-container .form-control {
            box-sizing: border-box;
            font-size: 14px;
            color: #495057;
        }

        .forgot-password-container .btn-primary {
            width: 100%;
            padding: 10px;
            background-color: #000;
            color: #fff;
            border: none;
            border-radius: 5px;
            box-sizing: border-box;
            cursor: pointer;
        }

            .forgot-password-container .btn-primary:hover {
                background-color: #333;
                border-color: #333;
            }

        .forgot-password-container .links {
            margin-top: 1rem;
            font-size: 14px;
        }

            .forgot-password-container .links a {
                text-decoration: none;
                color: #000;
            }

                .forgot-password-container .links a:hover {
                    text-decoration: underline;
                }
</style>


<div class="forgot-password-container">
    <h2>Thay đổi mật khẩu</h2>
    <p>Vui lòng nhập mật khẩu mới của bạn.</p>

    <form asp-action="ResetPassword" method="post">
        <div class="form-group">
            <label asp-for="NewPassword" class="control-label">Mật khẩu mới</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                <input asp-for="NewPassword" class="form-control" placeholder="Mật khẩu mới" type="password" />
            </div>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label">Xác nhận mật khẩu</label>
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Xác nhận mật khẩu" type="password" />
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <input type="hidden" asp-for="Username" />
        <div class="form-group">
            <input type="submit" value="Đặt lại mật khẩu" class="btn btn-primary" />
        </div>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">
            @ViewBag.Message
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
