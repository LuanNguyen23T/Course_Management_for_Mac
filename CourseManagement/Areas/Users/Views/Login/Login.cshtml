@model CourseManagement.ViewModels.Users.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Đăng Nhập";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f9fa;
            margin: 0;
        }

        .login-container {
            background: #fff;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 400px;
        }

            .login-container h2 {
                text-align: center;
                margin-bottom: 1.5rem;
            }

            .login-container .btn-primary {
                width: 100%;
                background-color: #000;
                border-color: #000;
            }

                .login-container .btn-primary:hover {
                    background-color: #333;
                    border-color: #333;
                }

            .login-container .links {
                display: flex;
                justify-content: space-between;
                margin-top: 1rem;
            }

                .login-container .links a {
                    text-decoration: none;
                    color: #000;
                }

                    .login-container .links a:hover {
                        text-decoration: underline;
                    }

        .validation-summary-errors {
            text-align: center;
        }

            .validation-summary-errors ul {
                list-style-type: none;
                padding: 0;
                margin: 0;
            }

                .validation-summary-errors ul li {
                    display: inline;
                }
    </style>

</head>
<body>
    <div class="login-container">
        <h2>Đăng Nhập</h2>
        <form method="post" asp-action="Login" asp-controller="Login">
            <!-- Display model-level validation errors -->
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- MaHocVien field -->
            <div class="mb-3">
                <label for="mahocvien" class="form-label">Mã Học Viên</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input type="text" id="mahocvien" name="MaHocVien" class="form-control" placeholder="Mã Học Viên" value="@Model.MaHocVien" />
                </div>
                @Html.ValidationMessageFor(model => model.MaHocVien, "", new { @class = "text-danger" })
            </div>

            <!-- MatKhau field -->
            <div class="mb-3">
                <label for="matkhau" class="form-label">Mật Khẩu</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                    <input type="password" id="matkhau" name="MatKhau" class="form-control" placeholder="Mật khẩu" value="@Model.MatKhau" />
                </div>
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary">Đăng Nhập</button>
        </form>

        <!-- Links -->
        <div class="links">
            <a href="/Users/Login/ForgotPassword">Quên mật khẩu?</a>
            <a href="/Users/Register/Register">Tạo tài khoản </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
