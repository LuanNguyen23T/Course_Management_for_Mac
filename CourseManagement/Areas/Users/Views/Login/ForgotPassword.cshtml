@model CourseManagement.ViewModels.Users.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Quên mật khẩu";
}

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        /* 1. Tắt thanh cuộn và đảm bảo box nằm trong nền ứng dụng */
        html, body {
            overflow: hidden; /* Tắt thanh cuộn */
            height: 100%; /* Đảm bảo chiều cao nền ứng dụng */
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        .input-group {
            display: flex;
            align-items: center; /* Căn giữa theo chiều dọc */
        }

        .input-group-text {
            display: flex;
            align-items: center; /* Căn giữa biểu tượng theo chiều dọc */
            justify-content: center;
            height: 38px; /* Đảm bảo chiều cao khớp với trường nhập liệu */
            font-size: 1.2rem; /* Điều chỉnh kích thước biểu tượng */
            border-radius: 5px 0 0 5px; /* Bo góc bên trái */
            padding: 0.375rem 0.75rem; /* Đảm bảo khoảng cách bên trong */
        }

        .form-control {
            height: 38px; /* Đảm bảo chiều cao khớp với biểu tượng */
            border-radius: 0 5px 5px 0; /* Bo góc bên phải */
        }

        .forgot-password-container {
            background: #fff;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 500px; /* Tăng chiều rộng của box */
            text-align: center;
        }

            .forgot-password-container h2 {
                font-size: 24px;
                font-weight: bold;
                margin-bottom: 1.5rem;
            }

            .forgot-password-container p {
                font-size: 14px;
                color: #6c757d;
                margin-bottom: 1.5rem;
            }

            .forgot-password-container .form-group {
                margin-bottom: 1rem;
                text-align: left;
            }

                .forgot-password-container .form-group label {
                    font-size: 14px;
                    font-weight: 500;
                    color: #000;
                    margin-bottom: 0.5rem;
                    display: block;
                }

            .forgot-password-container .form-control {
                box-sizing: border-box;
                font-size: 14px;
                color: #495057;
            }

            .forgot-password-container .btn-primary {
                width: 100%;
                padding: 10px;
                background-color: #000;
                color: #fff;
                border: none;
                border-radius: 5px;
                box-sizing: border-box;
                cursor: pointer;
            }

                .forgot-password-container .btn-primary:hover {
                    background-color: #333;
                    border-color: #333;
                }

            .forgot-password-container .links {
                margin-top: 1rem;
                font-size: 14px;
            }

                .forgot-password-container .links a {
                    text-decoration: none;
                    color: #000;
                }

                    .forgot-password-container .links a:hover {
                        text-decoration: underline;
                    }
    </style>

</head>
<body>
    <div class="forgot-password-container">
        <h2>Quên mật khẩu</h2>
        <p>Vui lòng nhập mã học viên và email của bạn để đặt lại mật khẩu.</p>

        <form asp-action="ForgotPassword" method="post">
            <div class="form-group">
                <label for="mahocvien" class="control-label">Mã Học Viên</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <input type="text" id="mahocvien" name="MaHocVien" class="form-control" placeholder="Mã Học Viên" value="@Model.MaHocVien" />
                </div>
                <span asp-validation-for="StudentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                    <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thay đổi mật khẩu" class="btn btn-primary" />
            </div>
        </form>

        <div class="links">
            <a href="/Users/Login/Login">Đăng nhập</a>
        </div>
    </div>


</body>
</html>
