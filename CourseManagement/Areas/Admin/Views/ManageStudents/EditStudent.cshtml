@model CourseManagement.Models.HocVien

@{
    ViewData["Title"] = "Sửa Học Viên";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 600px; border: 1px solid #ccc; border-radius: 10px; padding: 20px;">
        <div class="card-body">
            <form asp-action="EditStudent" method="post" class="needs-validation" novalidate>
                <fieldset>
                    <legend class="text-center mb-4"><strong>Sửa Thông Tin Học Viên</strong></legend>
                    <div class="mb-3">
                        <label for="HoTen" class="form-label">Họ Tên</label>
                        <input type="text" class="form-control" id="HoTen" name="HoTen" value="@Model.HoTen" required />
                    </div>
                    <div class="mb-3">
                        <label for="NgaySinh" class="form-label">Ngày Sinh</label>
                        <input type="date" class="form-control" id="NgaySinh" name="NgaySinh" value="@Model.NgaySinh?.ToString("yyyy-MM-dd")" required />
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
                    </div>
                    <div class="mb-3">
                        <label for="SoDienThoai" class="form-label">Số Điện Thoại</label>
                        <input type="text" class="form-control" id="SoDienThoai" name="SoDienThoai" value="@Model.SoDienThoai" required />
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-dark">Lưu Thay Đổi</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>