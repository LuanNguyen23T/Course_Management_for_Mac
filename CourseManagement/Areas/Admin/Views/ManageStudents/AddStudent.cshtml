@model CourseManagement.Models.HocVien

@{
    ViewData["Title"] = "Thêm Học Viên";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="text-center mb-4">Thêm Học Viên</h2>
    <form asp-action="AddStudent" method="post" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="MaHocVien" class="form-label">Mã Học Viên</label>
            <input type="text" class="form-control" id="MaHocVien" name="MaHocVien" required />
        </div>
        <div class="mb-3">
            <label for="HoTen" class="form-label">Họ Tên</label>
            <input type="text" class="form-control" id="HoTen" name="HoTen" required />
        </div>
        <div class="mb-3">
            <label for="NgaySinh" class="form-label">Ngày Sinh</label>
            <input type="date" class="form-control" id="NgaySinh" name="NgaySinh" />
        </div>
        <div class="mb-3">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" required />
        </div>
        <div class="mb-3">
            <label for="SoDienThoai" class="form-label">Số Điện Thoại</label>
            <input type="text" class="form-control" id="SoDienThoai" name="SoDienThoai" required />
        </div>
        <div class="mb-3">
            <label for="MatKhau" class="form-label">Mật Khẩu</label>
            <input type="password" class="form-control" id="MatKhau" name="MatKhau" required />
        </div>
        <button type="submit" class="btn btn-dark">Thêm Học Viên</button>
    </form>
</div>
