@model List<CourseManagement.ViewModels.Users.CourseViewModel>

@{
    ViewData["Title"] = "Quản lí khóa học";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="d-flex">
    <!-- Sidebar -->
    <div class="bg-dark text-white border-end" style="width: 250px; height: 100vh;">
        <h5 class="p-3">Admin</h5>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link text-white" href="/Admin/Main/Main">Màn hình chính</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/Admin/ManageStudents/ManageStudents">Quản lí học viên</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white active" href="/Admin/Main/ManageCourses">Quản lí khóa học</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="container-fluid p-4">
        <h2 style="margin-bottom: 20px;">Quản lí khóa học</h2>
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h4>Danh sách khóa học</h4>
        </div>
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Số Thứ Tự</th>
                    <th>Tên khóa học</th>
                    <th>Số lượng sinh viên</th>
                    <th>Doanh thu</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    int index = 1;
                    foreach (var course in Model)
                    {
                        <tr>
                            <td>@index</td>
                            <td>@course.TenKhoaHoc</td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">Không có khóa học nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
