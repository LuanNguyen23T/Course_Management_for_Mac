@{
    <title>Màn hình chính - DotNET Learn</title>
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="d-flex">
    <!-- Sidebar -->
    <div class="bg-dark text-white border-end" style="width: 250px; height: 100vh;">
        <h5 class="p-3">Admin</h5>
        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link text-white active" href="/Admin/Main/Main">Màn hình chính</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white" href="/Admin/Main/ManageStudents">Quản lí học viên</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-white active" href="/Admin/Main/ManageCourses">Quản lí khóa học</a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="container-fluid p-4">
        <h2>Màn hình chính</h2>
        <div class="row mt-4">
            <!-- Total Students -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body d-flex align-items-center">
                        <img src="~/images/Main/Students.jpg" alt="Students" style="width: 50px; height: 50px; margin-right: 15px;" />
                        <div>
                            <h5 class="card-title">Tổng số học viên hiện tại</h5>
                            <p class="card-text display-4">@ViewBag.TotalStudents</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Active Courses -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body d-flex align-items-center">
                        <img src="~/images/Main/Course.jpg" alt="Courses" style="width: 70px; height: 70px; margin-right: 15px;" />
                        <div>
                            <h5 class="card-title">Tổng số khóa học hiện tại</h5>
                            <p class="card-text display-4">@ViewBag.ActiveCourses</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
