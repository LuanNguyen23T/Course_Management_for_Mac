<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LearnEDU Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-dark text-white p-3" style="min-height: 100vh; width: 250px;">
            <h4 class="mb-4 fw-bold text-center">LearnEDU Admin</h4>
            <ul class="nav flex-column">
                <li class="nav-item mb-2">
                    <a class="nav-link text-white" asp-controller="Dashboard" asp-action="Index">
                        <i class="bi bi-bar-chart-fill"></i> Dashboard
                    </a>
                </li>

                <li class="nav-item mt-3 fw-bold text-uppercase small">👩‍🎓 Student</li>
                <li class="nav-item ps-3">
                    <a class="nav-link text-white" asp-controller="Student" asp-action="All">All Student</a>
                </li>
                <li class="nav-item ps-3">
                    <a class="nav-link text-white" asp-controller="Student" asp-action="Add">Add Student</a>
                </li>

                <li class="nav-item mt-3 fw-bold text-uppercase small">📚 Course</li>
                <li class="nav-item ps-3">
                    <a class="nav-link text-white" asp-controller="Course" asp-action="All">All Course</a>
                </li>
                <li class="nav-item ps-3">
                    <a class="nav-link text-white" asp-controller="Course" asp-action="Add">Add Course</a>
                </li>
                <li class="nav-item mt-3 fw-bold text-uppercase small">⚙️ Admin Capabilities</li>
                <li class="nav-item ps-3">
                    <a class="nav-link text-white" asp-controller="Student" asp-action="AllUser">All User</a>
                </li>
                <li class="nav-item ps-3">
                    <a class="nav-link text-white" asp-controller="Student" asp-action="AddAdmin">Add Admin</a>
                </li>

            </ul>

        </div>

        <!-- Page Content -->
        <div class="flex-grow-1">
            <!-- Topbar -->
            @{
                var userId = Context.Session.GetInt32("UserId");
                var username = Context.Session.GetString("Username") ?? "Admin";
            }

            <nav class="navbar navbar-light bg-light border-bottom px-4">
                <div class="d-flex justify-content-end w-100 align-items-center gap-4">
                    <!-- 👋 Xin chào -->
                    <span class="fw-semibold text-dark">Xin chào @username!</span>

                    <!-- 🔔 Notification -->
                    <i class="bi bi-bell-fill fs-5 text-secondary"></i>

                    <!-- 👤 Avatar dropdown -->
                    <div class="dropdown">
                        <a class="nav-link dropdown-toggle fw-semibold text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-person-circle fs-5"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Details", "Student", new { id = userId })">
                                    📄 My Profile
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Edit", "Student", new { id = userId })">
                                    ✏️ Edit Profile
                                </a>
                            </li>
                            <li><hr class="dropdown-divider" /></li>
                            <li>
                                <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">
                                    🚪 Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>


            <!-- Main Body -->
            <div class="container-fluid p-4">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
    @RenderSection("FullWidth", required: false)
</body>
</html>
