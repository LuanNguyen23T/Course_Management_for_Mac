@model LearnEDU.Models.Student
@{
    ViewData.ModelState.Remove("ImageFile"); // Bỏ lỗi validation bắt buộc cho ảnh
}
@{
    @if (ViewBag.Role == "Admin")  ViewData["Title"] = "Chi tiết thông tin Admin";
    else ViewData["Title"] = "Chi tiết thông tin học sinh";
}

@if (ViewBag.Role == "Admin"){
    <h2>Chi tiết thông tin Admin</h2>
}
else{
    <h2>Chi tiết thông tin học sinh</h2>
}


<form asp-action="Details" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="row">
        @if (ViewBag.Role == "Admin")
        {
            <div class="col-md-6">
                <label asp-for="Username">Tên đăng nhập</label>
                <input asp-for="Username" class="form-control" />
            </div>

            <div class="col-md-6">
                <label>Mật khẩu</label>
                <input type="password" name="Password" class="form-control" value="@Model.Password" />
                <span class="text-muted small">Mật khẩu hiện tại sẽ được giữ nguyên nếu không thay đổi</span>
            </div>
        }
        else
        {
            <input type="hidden" asp-for="Username" />
            <input type="hidden" asp-for="Password" />
        }
        <div class="col-md-6">
            <label asp-for="FirstName">Họ lót</label>
            <input asp-for="FirstName" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="LastName">Tên</label>
            <input asp-for="LastName" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Phone">Số điện thoại</label>
            <input asp-for="Phone" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="Address">Địa chỉ</label>
            <input asp-for="Address" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="DateOfBirth">Ngày sinh</label>
            <input asp-for="DateOfBirth" type="date" class="form-control" />
        </div>

        <div class="col-md-6">
            <label asp-for="Gender">Giới tính</label>
            <select asp-for="Gender" class="form-control">
                <option value="">-- Chọn giới tính --</option>
                <option>Nam</option>
                <option>Nữ</option>
            </select>
        </div>

        <div class="col-md-6">
            <label asp-for="Education">Trường học</label>
            <input asp-for="Education" class="form-control" />
        </div>
        @if (ViewBag.Role == "Admin")
        {
            <div class="mb-3">
                <label for="CurrentBalance" class="form-label">Số dư (VNĐ)</label>
                <input asp-for="CurrentBalance" class="form-control" />
                <span asp-validation-for="CurrentBalance" class="text-danger"></span>
            </div>

                <div class="col-md-6">
                    <label asp-for="Role">Vai trò</label>
                    <select asp-for="Role" class="form-control">
                        <option value="Student" selected="@(Model.Role == "Student")">Học viên</option>
                        <option value="Admin" selected="@(Model.Role == "Admin")">Admin</option>
                    </select>
                </div>

        }
        <div class="col-md-6">
            <label>Thay ảnh đại diện (nếu muốn)</label>
            <input type="file" name="ImageFile" class="form-control" />
        </div>

        @if (!string.IsNullOrEmpty(Model.Image))
        {
            <div class="col-md-6 mt-2">
                <label>Ảnh hiện tại:</label><br />
                <img src="@Model.Image" width="120" height="120" class="rounded" />
            </div>
        }
    </div>

    <br />
    <button type="submit" class="btn btn-dark">Lưu thay đổi</button>
</form>
<div asp-validation-summary="All" class="text-danger mb-3"></div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@if (ViewBag.DebugLog != null)
{
    <pre class="text-danger">@ViewBag.DebugLog</pre>
}
