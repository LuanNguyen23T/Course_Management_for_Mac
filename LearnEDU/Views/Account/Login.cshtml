@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="card login-card p-4 col-md-6 bg-white">
            <h3 class="text-center mb-4 text-primary">Đăng nhập</h3>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger">@ViewBag.Error</div>
            }

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label class="form-label">Tên tài khoản</label>
                    <input name="username" class="form-control rounded-pill" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Mật khẩu</label>
                    <input name="password" type="password" class="form-control rounded-pill" required />
                </div>

                <button type="submit" class="btn btn-primary w-100 rounded-pill">Đăng nhập</button>

                <div class="text-center mt-3">
                    <a href="@Url.Action("Register", "Account")">Đăng ký tại đây</a>
                </div>
            </form>
        </div>
    </div>
</body>
</html>