@model LearnEDU.Models.Course
@{
    ViewData["Title"] = "Add Course";
}

<h2>Thêm khóa học mới</h2>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" type="date" class="form-control" />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="EndDate" class="form-label"></label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Capacity" class="form-label"></label>
        <input asp-for="Capacity" class="form-control" type="number" min="0" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Giá khóa học (nghìn VNĐ)</label>
        <input asp-for="Price" type="number" class="form-control" min="0" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Level" class="form-label"></label>
        <select asp-for="Level" class="form-control" asp-items="new SelectList(ViewBag.Levels)"></select>
        <span asp-validation-for="Level" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="InstructorName" class="form-label"></label>
        <select asp-for="InstructorName" class="form-control" asp-items="new SelectList(ViewBag.Instructors)"></select>
        <span asp-validation-for="InstructorName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <select asp-for="Category" class="form-control" asp-items="new SelectList(ViewBag.Categories)"></select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="ImageFile" class="form-label">Ảnh khóa học</label>
        <input type="file" name="ImageFile" class="form-control" />
        <span class="text-danger">@ViewData["ImageError"]</span>
    </div>

    <button type="submit" class="btn btn-primary">Thêm khóa học</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
