@model LearnEDU.Models.Course
@{
    ViewData["Title"] = "Thêm khoá học";
}

<h2 class="mb-4">Thêm khóa học mới</h2>

<form asp-action="Add" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Name" class="form-label fw-bold">Tên khóa học</label> <!-- In đậm -->
        <input asp-for="Name" class="form-control" placeholder="Nhập tên khóa học" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label fw-bold">Mô tả khóa học</label> <!-- In đậm -->
        <textarea asp-for="Description" class="form-control" placeholder="Nhập mô tả khóa học"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="StartDate" class="form-label fw-bold">Ngày bắt đầu</label> <!-- In đậm -->
            <input asp-for="StartDate" type="date" class="form-control" placeholder="Chọn ngày bắt đầu" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="EndDate" class="form-label fw-bold">Ngày kết thúc</label> <!-- In đậm -->
            <input asp-for="EndDate" type="date" class="form-control" placeholder="Chọn ngày kết thúc" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Capacity" class="form-label fw-bold">Số lượng học viên tối đa</label> <!-- In đậm -->
            <input asp-for="Capacity" class="form-control" type="number" min="0" placeholder="Nhập số lượng học viên tối đa" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label fw-bold">Giá khóa học ($)</label> <!-- In đậm -->
            <input asp-for="Price" type="number" class="form-control" min="0" placeholder="Nhập giá khóa học" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Level" class="form-label fw-bold">Cấp độ</label> <!-- In đậm -->
        <select asp-for="Level" class="form-control" asp-items="new SelectList(ViewBag.Levels)">
            <option value="">Chọn cấp độ</option>
        </select>
        <span asp-validation-for="Level" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label fw-bold">Nội dung khóa học</label> <!-- In đậm -->
        <textarea asp-for="Content" class="form-control" rows="4" placeholder="Nhập nội dung khóa học"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="InstructorName" class="form-label fw-bold">Tên giảng viên</label> <!-- In đậm -->
        <input asp-for="InstructorName" class="form-control" type="text" placeholder="Nhập tên giảng viên" />
        <span asp-validation-for="InstructorName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label fw-bold">Danh mục</label> <!-- In đậm -->
        <select asp-for="Category" class="form-control" asp-items="new SelectList(ViewBag.Categories)">
            <option value="">Chọn danh mục</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="ImageFile" class="form-label fw-bold">Ảnh khóa học</label> <!-- In đậm -->
        <input type="file" name="ImageFile" class="form-control" placeholder="Chọn ảnh khóa học" />
        <span class="text-danger">@ViewData["ImageError"]</span>
    </div>

    <button type="submit" class="btn btn-dark w-100">Thêm khóa học</button> <!-- Nút rộng -->
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}