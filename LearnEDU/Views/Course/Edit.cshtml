@model LearnEDU.Models.Course

@{
    ViewData["Title"] = "Chỉnh sửa khóa học";
}

<h2 class="mb-4">Chỉnh sửa thông tin khóa học</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="DateCreated" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Tên khoá học</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label">Mô tả</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label">Nội dung chi tiết</label>
        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="StartDate" class="form-label">Ngày bắt đầu</label>
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="EndDate" class="form-label">Ngày kết thúc</label>
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Capacity" class="form-label">Số lượng học viện tối đa</label>
            <input asp-for="Capacity" type="number" class="form-control" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="CurrentSize" class="form-label">Sĩ số hiện tại</label>
            <input asp-for="CurrentSize" type="number" class="form-control" readonly />
        </div>
        <div class="col-md-4 mb-3">
            <label asp-for="Price" class="form-label">Giá (nghìn VNĐ)</label>
            <input asp-for="Price" type="number" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="InstructorName" class="form-label fw-bold">Tên giảng viên</label> 
        <input asp-for="InstructorName" class="form-control" type="text" placeholder="Nhập tên giảng viên" />
        <span asp-validation-for="InstructorName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Level" class="form-label">Cấp độ</label>
        <select asp-for="Level" class="form-select" asp-items="new SelectList(ViewBag.Levels)"></select>
        <span asp-validation-for="Level" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label">Danh mục</label>
        <select asp-for="Category" class="form-select" asp-items="new SelectList(ViewBag.Categories)"></select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Ảnh hiện tại</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="Course Image" style="max-width: 200px;" />
        }
        else
        {
            <p>Chưa có ảnh</p>
        }
    </div>

    <div class="mb-3">
        <label for="ImageFile" class="form-label">Thay ảnh mới (nếu muốn)</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-dark">Lưu thay đổi</button>
    <a href="@Url.Action("All", "Course")" class="btn btn-secondary ms-2">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
